            <input type="date" class="form-control" name="Jobs[i].StartDate" required data-msg-required="Please enter start date"/>
        </div>
        <div class="mb-3">
            <label>End Date</label>
            <input type="date" class="form-control" name="Jobs[i].EndDate"/>
        </div>
