<script id="job-template" type="text/html">
    <div class="job-entry" data-index="0">
        <div class="mb-3">
            <label>Company Name</label>
            <input class="form-control" name="Jobs[i].CompanyName" required data-msg-required="Please enter company name"/>
        </div>
